<h1>Editing league</h1>

<% form_for(@league) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label 'Promotions from a group' %><br />
    <%= f.text_field :promotions %>
  </p>
  <p>
    <%= f.label 'Teams in a group' %><br />
    <%= f.text_field :group_max %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>


<%= link_to 'Show', @league %> |
