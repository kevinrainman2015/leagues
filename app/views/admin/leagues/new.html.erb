<h1>New league</h1>

<% form_for [:admin, @league] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :promotions %><br />
    <%= f.text_field :promotions %>
  </p>
  <p>
    <%= f.label :group_max %><br />
    <%= f.text_field :group_max %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admin_leagues_path %>